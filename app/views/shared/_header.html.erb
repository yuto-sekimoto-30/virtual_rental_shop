<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <%= link_to movies_path, class: "navbar-brand" do %>
      <%= image_tag asset_path("logo.png") %>
    <% end %>
    <button class="navbar-toggler" style="background-color: white;" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse mr-5" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if logged_in? %>
              <%= render 'shared/logged_in' %>
            <% else %>
              <%= render 'shared/logout' %>
        <% end %>
        <li class="nav-item">
          <%= link_to movies_path, class: "text-white" do %>
            <i class="fa-solid fa-house"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
