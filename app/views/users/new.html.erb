<div class="container">
  <div class="row">
    <div class="col-10 offset-1 text-center">
      <h3 class="col-4 offset-5 text-muted"><%= t '.title' %></h3>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group col-8 offset-2">
          <div class="form-inline">
            <%= f.label :name ,class: "col-4 small"%>
            <%= f.text_field :name, class: 'form-control col-8' %>
          </div>
        </div>
        <div class="form-group col-8 offset-2">
          <div class="form-inline">
            <%= f.label :email, class:"col-4 small"%>
            <%= f.email_field :email, class: 'form-control col-8' %>
          </div>
        </div>
        <div class="form-group col-8 offset-2">
          <div class="form-inline">
            <%= f.label :password, class: "col-4 small" %>
            <%= f.password_field :password, class: 'form-control col-8' %>
          </div>
        </div>
        <div class="form-group col-8 offset-2">
          <div class="form-inline">
            <%= f.label :password_confirmation, class: "col-4 small"%>
            <%= f.password_field :password_confirmation, class: 'form-control col-8' %>
          </div>
        </div>
        <div class="form-group col-4 offset-5">
        <%= f.submit t('defaults.register'), class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
      <div class="form-group col-4 offset-5">
        <a href="/login"><%= t('.to_login_page') %></a>
      </div>
    </div>
  </div>
</div>