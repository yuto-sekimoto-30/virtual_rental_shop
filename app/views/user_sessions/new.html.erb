<div class="row">
  <div class="user-login col-6 offset-3">
    <h6 class="col-12 mt-3 mb-3 pb-2"><%= t '.title' %></h6>
    <div class="form col-12 mb-3">
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <div class="form-inline">
            <%= f.label :email, User.human_attribute_name(:email), class:"col-3 small"%>
            <%= f.email_field :email, class: 'form-control col-9' %>
          </div>
        </div>
        <div class="form-group">
          <div class="form-inline">
            <%= f.label :password, User.human_attribute_name(:password), class:"col-3 small"%>
            <%= f.password_field :password, class: 'form-control col-9' %>
          </div>
        </div>
        <%= f.submit t('defaults.login'), class: 'col-4 offset-4 btn-block p-2' %>
      <% end %>
    </div>
    <div class='col-12 mb-3'>
      <%= link_to t('.to_register_page'), new_user_path %>
      <%= link_to t('.password_forget'), new_password_reset_path %>
    </div>
  </div>
</div>