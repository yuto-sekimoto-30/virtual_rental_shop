<div class="col-10 offset-1">
  <h3 class="col-4 offset-4 text-muted"><%= t '.title' %></h3>
  <div class="form col-8 offset-2">
    <%= form_with url: login_path, local: true do |f| %>
      <div class="form-group">
        <div class="form-inline">
          <%= f.label :email, User.human_attribute_name(:email), class:"col-4 small"%>
          <%= f.email_field :email, class: 'form-control col-8' %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <%= f.label :password, User.human_attribute_name(:password), class:"col-4 small"%>
          <%= f.password_field :password, class: 'form-control col-8' %>
        </div>
      </div>
      <%= f.submit t('defaults.login'), class: 'btn btn-primary' %> 
    <% end %>
  </div>
  <div class='text-center mt-3 ml-5'>
    <%= link_to t('.to_register_page'), new_user_path %>
    <%= link_to t('.password_forget'), new_password_reset_path %>
  </div>
</div>
