<div class="col-12">
  <h3 class="col-4 offset-4 text-muted"><%= t '.title' %></h3>
  <table class="table table-hover">
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td>
          <%= image_tag 'https://image.tmdb.org/t/p/w1280' + movie['poster_path'], class: "", style: "height: 200px;"%>
          </td>
          <td class="align-middle">
            <%= movie['title'] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

