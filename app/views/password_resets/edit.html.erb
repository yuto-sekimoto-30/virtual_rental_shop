<div class="col-10 offset-1">
  <h3 class="col-6 offset-3 text-muted"><%= t '.title' %></h3>
  <div class="col-6 offset-3 mt-3 mb-3">
    <%= t '.message' %>
  </div>
  <div class="form col-8 offset-2">
    <%= form_with model:@user, url:password_reset_path(@token), local: true do |f|%>
      <div class="form-group">
        <div class="form-inline">
          <%= f.label :password, class:"col-4 small"%>
          <%= f.password_field :password, class: 'form-control col-8' %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <%= f.label :password_confirmation, class:"col-4 small"%>
          <%= f.password_field :password_confirmation, class: 'form-control col-8' %>
        </div>
      </div>
      <%= f.submit class: 'btn btn-primary' %> 
    <% end %>
  </div>
</div>

